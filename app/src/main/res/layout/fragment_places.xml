<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="315dp"
    android:background="@drawable/white_top_rounded_rect"
    tools:context="com.example.emersonchristie.mmitm.MapActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/places_type_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/editText"
        android:layout_alignParentLeft="true"
        android:background="@drawable/primary_rounded_rectangle"
        android:padding="5dp"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btn_restaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Restaurant"
            android:textColor="@color/button_text"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_cafe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Cafe"
            android:textColor="@color/button_text"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Bar"
            android:textColor="@color/button_text"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/btn_hotel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Hotel"
            android:textColor="@color/button_text"
            android:background="@color/colorPrimary"/>


